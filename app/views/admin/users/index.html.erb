<p id="users"><%= notice %></p>

<h1>Users Page</h1>

<table class="table">
  <thead>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>City</th>
    <th>Email</th>
    <th>Last sign in at</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |request| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name%></td>
        <td><%= user.city %></td>
        <td><%= user.email %></td>
        <td><%= user.last_sign_in_at %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(request) %></td>
        <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </table>
  </tbody>
</table>

<br>

<a href="/requests/new?" class="btn btn-default" role="button">New User</a>